<%= simple_form_for(
  @art_group,
  url: @art_group.new_record? ? admin_art_groups_path : admin_art_group_path(@art_group),
  method: @art_group.new_record? ? :post : :put,
) do |f| %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description, :input_html => { :rows => 10 }, :hint => "Markdown" %>
    <%= f.input :image %>
  </div>
  <%= f.button :submit %>
  <%= link_to("Cancel", admin_art_groups_path, class: "btn btn-danger pull-right") %>

<% end %>
