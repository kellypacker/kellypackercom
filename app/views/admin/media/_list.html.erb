<% if @media.any? %>
<table class="table table-striped media-table">
  <thead>
    <th>Name</th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% @media.each do |medium| %>
    <tr>
      <td>
        <%= link_to medium.name, edit_admin_medium_path(medium) %>
      </td>
      <td>
        <%= link_to("Edit", edit_admin_medium_path(medium), class: "btn btn-primary") %>
      </td>
      <td>
        <%= button_to "Delete", admin_medium_path(medium),
            :method => :delete,
            "data-confirm" => "Are you sure?",
            class: "btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<p>
  No media yet. <%= link_to("Create One", new_admin_medium_path) %>
</p>
<% end %>
